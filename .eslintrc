{
  "parser": "babel-eslint",
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-multi-spaces": false,
    "semi": false,
    "no-extra-semi": false,
    "camelcase": false,
    "no-trailing-spaces": false,
    "key-spacing": false
  }
}